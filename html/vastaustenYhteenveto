$.getJSON("https://intense-brushlands-60859.herokuapp.com/answers", function(data){
    var items= [];
    
$.each(data, function(key, arvo){
    
   // items.push("<p>"+"Kysymyksen tyyppi: "+arvo.question.type+ ". Kysymys: " +arvo.question.title+ " Vastaus: " + arvo.answerValue+"</p>");
    
    if (arvo.question.type =="avoin") {
            items.push("<p>"+"<strong>Kysymys:</strong> " +arvo.question.title+ " <strong>Vastaus:</strong> " + arvo.answerValue+"</p>");
    }
    
    
});
    $("#vastaukset").append(items.join(""));
    
})   
